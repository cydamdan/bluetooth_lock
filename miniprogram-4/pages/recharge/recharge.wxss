view{
  display: inline-block;
}
.body{
  width: 100vw;
  height: 100vh;
}
.box{
  width: 90%;
  margin-left: 5%;
  margin-top: 20px;
}
.main{
  border: 1px solid black;
  border-radius: 20px;
}
.top{
  width: 100%;
  height: 200px;
  border-bottom: 1px solid black;
}
.top-top{
  width: 100%;
  font-size: 13px;
}
.tt-left{
  float: left;
  margin-left: 20px;
  margin-top: 10px;
}
.tt-right{
  float: right;
  margin-right: 10px;
  margin-top: 10px;
}
.top-bottom{
  width: 100%;
  margin-top: 20px;
  margin-left: 20px;
}
.top-bottom text{
  display: block;
}
.top-bottom text.money{
  display: inline;
  font-size: 50px;
  position: relative;
  left: 50%;
  top: 30px;
}
#money{
  font-size: 50px;
  width: 60px;
  position: relative;
  left: 50%;
  top: 30px;
  margin-left: -70px;
}
.bottom-top{
  padding: 8px 0px 40px 20px;
}
.bottom-but{
  display: flex;
  height: 130px;
  flex-wrap: wrap;
}
.bottom-but button{
  height: 40px;
}
.confirm{
  position: absolute;
  width: 200px;
  left: 50%;
  margin-left: -100px;
  bottom: 7%;
 }
.confirm button {
  color: white;
  background-color: #ff0000;
  border-radius: 20px;
}