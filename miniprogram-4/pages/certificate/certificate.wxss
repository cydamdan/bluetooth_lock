..body{
  width: 100vw;
  height: 100vh;
  padding-top: 20px;
}
.box{
  width: 90%;
  height: 200px;
  margin-top: 20px;
  margin-left: 5%;
  border: 1px solid black;
  display: flex;
}
.left{
  width: 50%;
  border-right: 1px solid black;
}
.right{
  width: 50%;
}
.title{
  text-align: center;
  font-size: 17px;
  margin-bottom: 20px;
}
.main-text{
  height: 16px;
  font-size: 12px;
  color: red;
  margin-left: 15px;
}
.display{
  font-size: 12px;
  margin-left: 15px;
  margin-bottom: 10px;
}
.confirm{
  position: absolute;
  width: 200px;
  left: 50%;
  margin-left: -100px;
  bottom: 7%;
 }
.confirm button {
  color: white;
  background-color: #ff0000;
  border-radius: 20px;
}