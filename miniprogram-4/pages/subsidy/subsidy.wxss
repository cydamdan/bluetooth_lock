.body{
  width: 100%;
  height: 100vh;
  margin: 0;
  padding: 0;
  padding-top: 20px;
}
.box{
  width: 90%;
  margin-left: 5%;
  height: 95%;
  border: 1px solid black;
  border-radius: 15px;
}
.top{
  display: flex;
  border-bottom: 1px solid black;
}
.person{
  flex: 1;
  border-right: 1px solid black;
  padding-bottom: 20px;
}
.person-main{
  padding-top: 10px;
}
.person text{
  font-size: 12px;
  margin-left: 15px;
  margin-bottom: 10px;
}
.perk{
  flex: 1;
  border-right: 1px solid black;
  padding-bottom: 20px;
}
.perk-main{
  padding-top: 10px;
}
.perk text{
  font-size: 12px;
  margin-left: 15px;
  margin-bottom: 10px;
}
.card{
  flex: 1;
}
.card-main{
  padding-top: 10px;
}
.card text{
  font-size: 12px;
  margin-left: 15px;
  margin-bottom: 10px;
}
.title{
  text-align: center;
  font-size: 17px;
}
.main-text{
  height: 16px;
  font-size: 12px;
  color: red;
  margin-left: 15px;
}
.bottom-title{
  font-size: 17px;
  position: relative;
  left: 30px;
  top: 10px;
}
.bottom{
  width: 100%;
  height: 70%;
}
.bottom-main{
  width: 90%;
  height: 75%;
  margin-left: 5%;
  margin-top: 20px;
  
}
.confirm{
  position: absolute;
  width: 200px;
  left: 50%;
  margin-left: -100px;
  bottom: 7%;
 }
.confirm button{
  color: white;
  background-color: #ff0000;
  border-radius: 20px;
}